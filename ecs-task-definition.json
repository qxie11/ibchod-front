{
  "family": "iobchod-frontend-task",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "IMAGE_URI",
      "portMappings": [
        {
          "containerPort": 9002,
          "hostPort": 9002,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "9002"
        },
        {
          "name": "HOSTNAME",
          "value": "0.0.0.0"
        },
        {
          "name": "NEXT_TELEMETRY_DISABLED",
          "value": "1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/iobchod-frontend",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:9002/api/metrics || curl -f http://localhost:9002/ || exit 1"],
        "interval": 30,
        "timeout": 15,
        "retries": 10,
        "startPeriod": 180
      }
    }
  ]
}
